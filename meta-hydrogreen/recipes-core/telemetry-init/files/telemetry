#!/bin/sh
### BEGIN INIT INFO
# Provides:             telemetry
# Required-Start:       $remote_fs $syslog
# Required-Stop:        $remote_fs $syslog
# Default-Start:        2 3 4 5
# Default-Stop:         0 1 6
# Short-Description:    Telemetry Service
# Description:          Starts and stops the Telemetry daemon
### END INIT INFO 

DAEMON_NAME="telemetry"
DAEMON_PATH="/usr/bin/$DAEMON_NAME"
PIDFILE="/var/run/$DAEMON_NAME.pid"

HOME_DIR=$(getent passwd $(logname) | cut -d: -f6)
TIMESTAMP=$(date +%Y%m%d_%H%M%S)
LOGFILE="$HOME_DIR/telemetry_$TIMESTAMP.log"

start() {
    echo "Starting $DAEMON_NAME..."

    if [ -f "$PIDFILE" ]; then
        echo "$DAEMON_NAME is already running."
        exit 1
    fi

    TIMEOUT=10
    echo "Waiting for LORA to be ready..."
    while [ ! -e "/dev/ttyS0" ] && [ $TIMEOUT -gt 0 ]; do
        sleep 1
        TIMEOUT=$((TIMEOUT - 1))
    done

    if [ ! -e "/dev/ttyS0" ]; then
        echo "Error: LORA not found. Exiting."
        exit 1
    fi

    $DAEMON_PATH >> "$LOGFILE" 2>&1 &

    echo $! > "$PIDFILE"
    echo "$DAEMON_NAME started."
}

stop() {
    echo "Stopping $DAEMON_NAME..."

    if [ ! -f "$PIDFILE" ]; then
        echo "$DAEMON_NAME is not running."
        exit 1
    fi

    kill "$(cat "$PIDFILE")"
    rm -f "$PIDFILE"
    echo "$DAEMON_NAME stopped."
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        stop
        start
        ;;
    status)
        if [ -f "$PIDFILE" ]; then
            echo "$DAEMON_NAME is running (PID $(cat "$PIDFILE"))."
        else
            echo "$DAEMON_NAME is not running."
        fi
        ;;
    *)
        echo "Usage: $0 {start|stop|status|restart}"
esac

exit 0